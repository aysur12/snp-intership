include ../stories-card/stories-card

mixin stories(params= {})
  -
    const {
      storiesTitleText= "",
      storiesSubtitleText= "",
      storiesCards= [],
      linkMoreText,
      storiesSocialLinks,
    } = params;

  .stories
    .stories__container
      .stories__heading
        h2.stories__title= storiesTitleText
        p.stories__subtitle= storiesSubtitleText
      ul.stories__cards
        each storiesCard in storiesCards
          li.stories__stories-card
            -
              const {
                cardImgSrc,
                cardImgAlt,
                cardTitle,
                cardText,
                cardListItems,
                storiesLinkMoreHref,
                storiesLinkMoreText,
                cardStoriesSocialLinks,
              } = storiesCard;

            +stories-card({
              storiesCardImgSrc: cardImgSrc,
              storiesCardImgAlt: cardImgAlt,
              storiesCardTitle: cardTitle,
              storiesCardText: cardText,
              storiesCardListItems: cardListItems,
              linkMoreHref: storiesLinkMoreHref,
              linkMoreText,
              storiesSocialLinks: cardStoriesSocialLinks,
            })