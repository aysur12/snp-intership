mixin review(params = {})
  -
    const {
      reviewText= "",
      reviewUserName= "",
      reviewTourName= "",
      avatarImg= "",
      avatarImgAlt= "",
    } = params;

  .review
    p.review__text= reviewText
    .review__user-block
      .review__user-content
        h3.review__user-name= reviewUserName
        p.review__tour-name Тур: #{reviewTourName}
      .review__avatar
        img.review__avatar-img(img= avatarImg alt= avatarImgAlt)
